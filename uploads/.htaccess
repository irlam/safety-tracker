# Prevent script execution in uploads directory
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    Require all denied
</FilesMatch>

# Prevent access to hidden files
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# Allow only specific file types (images and PDFs)
# Note: SVG files excluded due to potential XSS risks
<FilesMatch "\.(jpg|jpeg|png|gif|pdf|webp)$">
    Require all granted
</FilesMatch>

# Disable directory listing
Options -Indexes

# Disable PHP execution
php_flag engine off
